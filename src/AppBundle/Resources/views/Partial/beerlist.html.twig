<div class="container">
{% for beer in beers %}
    {% if beer.beer != null %}
        {%  if loop.index0 % 3 == 0 %} <div id="beers" class="row"> {% endif %}
                <div class="col-md-4">
                    <div class="tile p{{ loop.index%5 }} scrollpoint sp-effect6">
                        <div class="imageSmall media">
                            <a  href="{{ path('beer', {'name' : beer.beer.name}) }}">
                                {% if beer.beer.picture %}
                                {% thumbnail beer.beer.picture, 'small' with{'class' : 'img-rounded img-responsive'} %}
                                {% else %}
                                    <div class="imageSmall media">
                                        <img class="imageSmall img-rounded img-responsive" src="{{ asset('bundles/app/img/default.png') }}">
                                    </div>
                                {% endif %}
                            </a>
                            <div
                                    class="fb-like"
                                    data-share="true"
                                    data-width="450"
                                    data-show-faces="true">
                            </div>
                        </div>
                        <div class="details">
                            <h3 class="media-heading heading" >
                                {{ beer.beer.name }}
                            </h3>
                            <h4>Cena : {{ beer.price }} </h4>
                            {% include 'AppBundle:Partial:ratingstars.html.twig' %}
                        </div>
                    </div>
                </div>
    {%  if loop.index0 % 3 == 2 or loop.last%} </div> {% endif %}
    {% endif %}
{% endfor %}
</div>