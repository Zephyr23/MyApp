            <script type="text/javascript" src="{{ asset('bundles/app/js/isotope.pkgd.min.js') }}"></script>

            <script>
                $(document).ready(function () {
                    appMaster.preLoader();
                });

                var swiper = new Swiper('.swiper-container-image', {
                    pagination: '.swiper-pagination',
                    effect: 'coverflow',
                    grabCursor: true,
                    centeredSlides: true,
                    slidesPerView: 'auto',
                    nextButton: '.swiper-button-next',
                    prevButton: '.swiper-button-prev',
                    coverflow: {
                        rotate: 50,
                        stretch: 0,
                        depth: 100,
                        modifier: 1,
                        slideShadows: true
                    }
                })

                function swiper1Init() {
                    var swiper = new Swiper('.swiper-container-pubs', {
                        pagination: '.swiper-pagination',
                        effect: 'coverflow',
                        grabCursor: true,
                        centeredSlides: true,
                        slidesPerView: 'auto',
                        slidesPerColumn: 3,
                        paginationClickable: true,
                        nextButton: '.swiper-button-next',
                        prevButton: '.swiper-button-prev',
                        coverflow: {
                            rotate: 50,
                            stretch: 0,
                            depth: 100,
                            modifier: 1,
                            slideShadows: true
                        }
                    })

                }

                function swiper2Init() {
                    var swiper = new Swiper('.swiper-container-beers', {
                        pagination: '.swiper-pagination',
                        effect: 'coverflow',
                        grabCursor: true,
                        centeredSlides: true,
                        slidesPerView: 'auto',
                        paginationClickable: true,
                        nextButton: '.swiper-button-next',
                        prevButton: '.swiper-button-prev',
                        coverflow: {
                            rotate: 50,
                            stretch: 0,
                            depth: 100,
                            modifier: 1,
                            slideShadows: true
                        }
                    })
                }

                $('.btn-signUp').on('click', function () {

                    $('.dropdown').toggleClass('hide');

                })

                $('.fa-chevron-down').on('click', function () {
                    $('.dropdown').removeClass('hidden');
                    $(this).addClass('hidden');
                })
                $('.pubnav').on('click', function () {

                    $('#packages').toggleClass('hidden');

                })

                $('.big-title').on('click', function () {

                    $('.big-title').addClass('hidden-md hidden-lg');
                    $('.big-title1').removeClass('hidden');

                })


                $('.pubs').on('click', function () {

                    if ($('.second').hasClass('visible')) {
                        $('.second').toggleClass('hidden');
                        $('.second').toggleClass('visible');
                        $('.about').toggleClass('hidden-xs');
                        $('.about').toggleClass('hidden-sm');
                        $('.about-text').toggleClass('hidden');
                        $('.about-text').toggleClass('visible');

                    }
                    if ($('.third').hasClass('visible')) {
                        $('.third').toggleClass('hidden');
                        $('.third').toggleClass('visible');
                        $('.about').toggleClass('hidden-xs');
                        $('.about').toggleClass('hidden-sm');
                        $('.about-text').toggleClass('hidden');
                        $('.about-text').toggleClass('visible');

                    }

                    $('.first').toggleClass('hidden');
                    $('.first').toggleClass('visible');
                    $('.about').toggleClass('hidden-xs');
                    $('.about').toggleClass('hidden-sm');
                    $('.about-text').toggleClass('hidden');
                    $('.about-text').toggleClass('visible');

                    swiper1Init();
                    $grid.isotope();

                })

                $('.beers').on('click', function () {

                    if ($('.first').hasClass('visible')) {
                        $('.first').toggleClass('hidden');
                        $('.first').toggleClass('visible');
                        $('.about').toggleClass('hidden-xs');
                        $('.about').toggleClass('hidden-sm');
                        $('.about-text').toggleClass('hidden');
                        $('.about-text').toggleClass('visible');

                    }
                    if ($('.third').hasClass('visible')) {
                        $('.third').toggleClass('hidden');
                        $('.third').toggleClass('visible');
                        $('.about').toggleClass('hidden-xs');
                        $('.about').toggleClass('hidden-sm');
                        $('.about-text').toggleClass('hidden');
                        $('.about-text').toggleClass('visible');

                    }
                    $('.second').toggleClass('hidden');
                    $('.second').toggleClass('visible');
                    $('.about').toggleClass('hidden-xs');
                    $('.about').toggleClass('hidden-sm');
                    $('.about-text').toggleClass('hidden');
                    $('.about-text').toggleClass('visible');
                    swiper2Init();
                    $grid.isotope();
                })

                $('.reviews').on('click', function () {

                    if ($('.first').hasClass('visible')) {
                        $('.first').toggleClass('hidden');
                        $('.first').toggleClass('visible');
                        $('.about').toggleClass('hidden-xs');
                        $('.about').toggleClass('hidden-sm');
                        $('.about-text').toggleClass('hidden');
                        $('.about-text').toggleClass('visible');

                    }
                    if ($('.second').hasClass('visible')) {
                        $('.second').toggleClass('hidden');
                        $('.second').toggleClass('visible');
                        $('.about').toggleClass('hidden-xs');
                        $('.about').toggleClass('hidden-sm');
                        $('.about-text').toggleClass('hidden');
                        $('.about-text').toggleClass('visible');

                    }
                    $('.third').toggleClass('hidden');
                    $('.third').toggleClass('visible');
                    $('.about').toggleClass('hidden-xs');
                    $('.about').toggleClass('hidden-sm');
                    $('.about-text').toggleClass('hidden');
                    $('.about-text').toggleClass('visible');

                    $grid.isotope();
                })


                // Counter
                jQuery(document).ready(function ($) {
                    $('.statistic-counter').counterUp({
                        delay: 5,
                        time: 500
                    });
                });


                window.fbAsyncInit = function () {
                    FB.init({
                        appId: '101478166643772',
                        xfbml: true,
                        version: 'v2.8'
                    });
                    FB.AppEvents.logPageView();
                };

                (function (d, s, id) {
                    var js, fjs = d.getElementsByTagName(s)[0];
                    if (d.getElementById(id)) {
                        return;
                    }
                    js = d.createElement(s);
                    js.id = id;
                    js.src = "//connect.facebook.net/en_US/sdk.js";
                    fjs.parentNode.insertBefore(js, fjs);
                }(document, 'script', 'facebook-jssdk'));

                //isotope

                // quick search regex
                    var qsRegex;
                    var buttonFilter;

                    // init Isotope
                    var $grid = $('.grid').isotope({
                        itemSelector: '.element-item',
                        layoutMode: 'fitRows',
                        getSortData: {
                            name: '.name',
                            price: '.price'
                        },
                        filter: function () {
                            var $this = $(this);
                            var searchResult = qsRegex ? $this.text().match(qsRegex) : true;
                            var buttonResult = buttonFilter ? $this.is(buttonFilter) : true;
                            return searchResult && buttonResult;
                        }
                    });

                    $('#filters').on('click', 'button', function () {
                        buttonFilter = $(this).attr('data-filter');
                        $grid.isotope();
                    });

                    // bind sort button click
                    $('#sorts').on( 'click', 'button', function() {
                        var sortByValue = $(this).attr('data-sort-by');
                        $grid.isotope({ sortBy: sortByValue });
                    });

                    // use value of search field to filter
                    var $quicksearch = $('#quicksearch').keyup(debounce(function () {
                        qsRegex = new RegExp($quicksearch.val(), 'gi');
                        $grid.isotope();
                    }));


                    // change is-checked class on buttons
                    $('.button-group').each(function (i, buttonGroup) {
                        var $buttonGroup = $(buttonGroup);
                        $buttonGroup.on('click', 'button', function () {
                            $buttonGroup.find('.is-checked').removeClass('is-checked');
                            $(this).addClass('is-checked');
                        });
                    });


                    // debounce so filtering doesn't happen every millisecond
                    function debounce(fn, threshold) {
                        var timeout;
                        return function debounced() {
                            if (timeout) {
                                clearTimeout(timeout);
                            }
                            function delayed() {
                                fn();
                                timeout = null;
                            }

                            setTimeout(delayed, threshold || 100);
                        };
                    }

            </script>
