{% trans_default_domain 'FOSUserBundle' %}

{% block body %}

    <div class="">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path("fos_user_security_check") }}" method="post">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
            {% endif %}
            <div class="form-group">
                <input type="text" class="form-control" id="username" placeholder="Username" name="_username"
                       value="{{ last_username }}" required="required"/>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" id="password" placeholder="Password" name="_password"
                       required="required"/>
            </div>
            <div class="btn-group">
                <button type="submit" id="_submit" name="_submit"
                        class="btn btn-sigUp sp-effect3 active animated fadeInRight">login
                </button>
            </div>
        </form>

    </div>

{% endblock %}


